<%= render "header" %>
<% if @has_report[@source] %>
    <div class="row">
        <ul class="nav nav-tabs">
            <% @has_report.each do |source, has_report| %>
                <% if has_report %>
                    <li role="presentation" class="<%= (source == @source) ? "active" : "" %>"><%= link_to @source_full_name[source], project_report_path(@project, source) %></li>
                <% end %>
            <% end %>
            <span class="reports-build-info">[last analysis on build <%= link_to @build.number, project_build_path(@project, @build) %>, revision <%= link_to_revision(@project, @build) %>]</span>
        </ul>
    </div>
    <%= render @source %>
<% elsif @source_full_name[@source] %>
    No report from <%= @source_full_name[@source]  %> available.
<% else %>
    No source "<%= @source %>".
<% end %>
